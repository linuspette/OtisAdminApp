@inject ILinkService linkService

<NavigationBarStyle />

<MudDrawerHeader>
    <MudText Typo="Typo.h4">Menu</MudText>
    <MudSpacer/>
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.End" OnClick="@((e) => OnClick.InvokeAsync())"/>
</MudDrawerHeader>
<MudNavMenu>
    <MudNavLink Href="./" Icon="@Icons.Material.Filled.Dashboard">
        <MudText Class="menuItem">Dashboard</MudText>
    </MudNavLink>
    <MudNavLink Href="@linkService.ShowElevators()" Icon="@Icons.Material.Filled.Elevator">
        <MudText Class="menuItem">Elevators</MudText>
    </MudNavLink>
    <MudNavLink Href="@linkService.ViewErrands()" Icon="@Icons.Material.Filled.Assessment">
        <MudText Class="menuItem">Errands</MudText>
    </MudNavLink>
    <MudNavLink Href="@linkService.ViewEmployees()" Icon="@Icons.Material.Filled.Accessibility">
            <MudText Class="menuItem">Employees</MudText>
        </MudNavLink>

</MudNavMenu>

@code {
    [Parameter] public EventCallback OnClick { get; set; }

}
